FROM node:20-alpine
WORKDIR /app
COPY package*.json ./
RUN npm install --omit=dev
COPY tools/cli tools/cli
RUN chmod +x tools/cli/certnode-verify.mjs
ENTRYPOINT ["node","tools/cli/certnode-verify.mjs"]
