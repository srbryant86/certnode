{
  "title": "CertNode Overview",
  "schemaVersion": 36,
  "version": 1,
  "panels": [
    {
      "type": "timeseries",
      "title": "Requests by Status (rate/s)",
      "targets": [
        {
          "expr": "sum by (status) (rate(certnode_requests_total[5m]))",
          "legendFormat": "status {{status}}"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "p99 Latency (ms)",
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum by (le) (rate(certnode_request_duration_ms_bucket[5m])))",
          "legendFormat": "p99"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "Rate Limit Triggers (5m increase)",
      "targets": [
        {
          "expr": "increase(certnode_rate_limit_triggered_total[5m])",
          "legendFormat": "rl triggers"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
    }
  ],
  "time": { "from": "now-6h", "to": "now" }
}

