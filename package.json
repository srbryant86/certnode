{
  "name": "certnode-root",
  "private": true,
  "version": "0.0.0",
  "description": "Root scripts for CertNode development",
  "engines": { "node": ">=20.0.0" },
  "scripts": {
    "start": "node api/src/index.js",
    "test:fast": "node tools/test-fast.js",
    "bench": "node tools/benchmark.js",
    "openapi:check": "node tools/check-openapi.js",
    "sdk:pack": "npm --prefix sdk/node pack && npm --prefix sdk/web pack",
    "example:sign": "node examples/node-sign.js --payload '{\"hello\":\"world\",\"n\":42}'",
    "example:verify": "node examples/node-verify.js --receipt examples/receipt.example.json --jwks examples/jwks.example.json"
  }
}

