{
    "name": "@certnode/sdk",
    "version": "1.1.0",
    "description": "Universal receipt infrastructure - Node.js implementation of the CertNode open standard for tamper-evident digital receipts",
    "main": "index.js",
    "types": "index.d.ts",
    "exports": {
        ".": {
            "require": "./index.js",
            "types": "./index.d.ts"
        }
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "sideEffects": false,
    "publishConfig": {
        "access": "public"
    },
    "homepage": "https://certnode.io",
    "bugs": {
        "url": "https://github.com/certnode/certnode/issues"
    },
    "scripts": {
        "pack": "npm pack",
        "publish:dry-run": "npm publish --dry-run"
    },
    "keywords": [
        "certnode",
        "receipt",
        "verification",
        "universal-standard",
        "infrastructure",
        "es256",
        "eddsa",
        "ecdsa",
        "ed25519",
        "jws",
        "cryptography",
        "digital-evidence",
        "tamper-evident",
        "rfc-compliant"
    ],
    "author": "CertNode Standards Committee",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/certnode/certnode.git",
        "directory": "sdk/node"
    },
    "files": [
        "index.js",
        "index.d.ts",
        "README.md"
    ]
}
