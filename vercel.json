{
  "version": 2,
  "builds": [
    {
      "src": "api/src/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "web/**",
      "use": "@vercel/static"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Strict-Transport-Security", "value": "max-age=63072000; includeSubDomains; preload" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "no-referrer" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" },
        { "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self'; base-uri 'none'; frame-ancestors 'none'"
        }
      ]
    },
    {
      "source": "/vendor/(.*)",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
    },
    {
      "source": "/openapi.json",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=86400" }]
    },
    {
      "source": "/.well-known/jwks.json",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=300, must-revalidate" }]
    }
  ],
  "rewrites": [
    { "source": "/trust", "destination": "/public/trust/index.html" },
    { "source": "/status", "destination": "/public/status/index.html" },
    { "source": "/usage", "destination": "/public/usage/index.html" },
    { "source": "/showcase", "destination": "/public/showcase/index.html" },
    { "source": "/trust/governance", "destination": "/public/trust/governance.html" }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "api/src/index.js"
    },
    {
      "src": "/validator",
      "dest": "/public/verify.html"
    },
    {
      "src": "/verify",
      "dest": "/public/verify.html"
    },
    {
      "src": "/implementation",
      "dest": "/web/pricing.html"
    },
    {
      "src": "/specification",
      "dest": "/public/openapi.html"
    },
    {
      "src": "/openapi",
      "dest": "/public/openapi.html"
    },
    {
      "src": "/api",
      "dest": "/public/openapi.html"
    },
    {
      "src": "/verify",
      "dest": "/web/verify.html"
    },
    {
      "src": "/pricing",
      "dest": "/web/pricing.html"
    },
    {
      "src": "/openapi",
      "dest": "/web/openapi.html"
    },
    {
      "src": "/trust",
      "dest": "/public/trust/index.html"
    },
    {
      "src": "/status",
      "dest": "/public/status/index.html"
    },
    {
      "src": "/",
      "dest": "/web/index.html"
    },
    {
      "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot))",
      "dest": "/web/$1"
    }
  ]
}