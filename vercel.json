{
  "version": 2,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Strict-Transport-Security", "value": "max-age=31536000; includeSubDomains; preload" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "no-referrer" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/trust", "destination": "/trust.html" },
    { "source": "/verify", "destination": "/verify.html" },
    { "source": "/pricing", "destination": "/pricing.html" },
    { "source": "/openapi", "destination": "/openapi.html" },
    { "source": "/compliance-calculator", "destination": "/compliance-calculator.html" },
    { "source": "/account", "destination": "/account.html" }
  ]
}